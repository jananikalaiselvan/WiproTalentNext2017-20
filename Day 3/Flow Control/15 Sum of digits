import java.util.Scanner;
public class Main 
{
    public static void main(String args[])
    {
        int input, n, sum = 0;
        Scanner d = new Scanner(System.in);
        System.out.print("Enter the number:");
        input = d.nextInt();
        while(input > 0)
        {
            n = input % 10;
            sum = sum + n;
            input = input / 10;
        }
        System.out.println("Sum of Digits --> "+sum);
    }
}
